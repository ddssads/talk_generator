<form method='POST' ,action='/'>
  <div class="container">
    <!-- Content here -->
    <div class="d-flex justify-content-center mt-5">
      <h2>你想對誰說幹話？</h2>
    </div>
    <div class="d-flex justify-content-between">
      <div class="card" style="width: 18rem;">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg"
          class="card-img-top height:auto" alt="engineer" style="height:200px;">
        <div class="card-body">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="jobRadios" id="engineer" value="engineer" {{#ifEquals
              job 'engineer' }} checked {{/ifEquals}}>
            <label class="form-check-label" for="engineer">
              工程師
            </label>
          </div>
        </div>
      </div>
      <div class="card" style="width: 18rem;">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg"
          class="card-img-top img-fluid" alt="designer" style="height:200px;">
        <div class="card-body">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="jobRadios" id="designer" value="designer" {{#ifEquals
              job 'designer' }}checked{{/ifEquals}}>
            <label class="form-check-label" for="designer">
              設計師
            </label>
          </div>
        </div>
      </div>
      <div class="card" style="width: 18rem;">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg"
          class="card-img-top img-fluid" alt="entrepreneur" style="height:200px;">
        <div class="card-body">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="jobRadios" id="entrepreneur" value="entrepreneur"
              {{#ifEquals job 'entrepreneur' }}checked{{/ifEquals}}>
            <label class="form-check-label" for="entrepreneur">
              創業家
            </label>
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-5 d-flex">
      <div class="col-2 text-center" style="height:400px;">
        <button class="btn btn-primary btn-lg" type="submit">產生幹話</button>
      </div>
      <div class="border border-success col-10" style="height:400px;">
        {{#if talk}}
        <span class="text-danger">{{talk}}</span>
        {{/if}}
      </div>
    </div>
  </div>
</form>